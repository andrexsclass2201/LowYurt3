    <script>
        // Hero Slider - Automático
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            const offset = -currentSlide * 100;
            document.getElementById('heroSlider').style.transform = `translateX(${offset}%)`;
        }

        setInterval(nextSlide, 6000); // Cambia cada 6 segundos

        function changeSlide(direction) {
            currentSlide = (currentSlide + direction + totalSlides) % totalSlides;
            const offset = -currentSlide * 100;
            document.getElementById('heroSlider').style.transform = `translateX(${offset}%)`;
        }

        // Testimonials Slider - Automático
        let currentTesti = 0;
        const testiSlides = document.querySelectorAll('.testimonial');
        const totalTesti = testiSlides.length;
        const testiContainer = document.getElementById('testiSlider');

        function nextTesti() {
            currentTesti = (currentTesti + 1) % totalTesti;
            const offset = -currentTesti * (50 /6); // 3 tarjetas visibles
            testiContainer.style.transform = `translateX(${offset}%)`;
        }

        setInterval(nextTesti, 3000); // Cambia cada 4 segundos
    </script>
