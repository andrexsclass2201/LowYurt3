    <div class="products">
        <h1 class="text-center mb-4">Catálogo de Productos</h1>

        <div class="text-center mb-4">
            <a asp-action="Index" class="btn btn-secondary m-1">Todos</a>

            @foreach (var cat in ViewBag.Categorias)
            {
                <a asp-action="Index"
                   asp-route-categoriaId="@cat.IdCategoria"
                   class="btn btn-primary m-1">
                    @cat.NombreCategoria
                </a>
            }
        </div>

        <div class="products-grid">
            @foreach (var item in Model)
            {
                <div class="product-card">

                    <img src="@(item.ImagenProducto ?? "https://via.placeholder.com/300x200")" alt="@Html.DisplayFor(modelItem => item.NombreProducto)">
                    <h3>@Html.DisplayFor(modelItem => item.NombreProducto)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Descripcion)</p>
                    <p class="price">$@Html.DisplayFor(modelItem => item.ValorUnitario)</p>
                    <p class="category">Categoría: @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.NombreCategoria)</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger">Eliminar</a>
                        }
                        else if (User.IsInRole("Cliente"))
                        {
                            <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-controller="Carrito" asp-action="Agregar" asp-route-id="@item.IdProducto" class="btn btn-primary">Agregar al Carrito</a>
                        }
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-controller="Carrito" asp-action="Agregar" asp-route-id="@item.IdProducto" class="btn btn-primary">Agregar al Carrito</a>
                    }
                </div>
            }
            @if (User.IsInRole("Admin"))
            {
                <div class="product-card">
                    <img src="~/img/Icon-agregar.png" alt="Nuevo Producto">
                <p></p>
                    <h3>Agrega un nuevo producto</h3>
                    <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
                </div>
            }

        </div>
    </div>
</body>