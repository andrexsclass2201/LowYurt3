@model IEnumerable<LowYurt3.Models.PedidoAdminViewModel>

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            padding-top: 68px;
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        main {
            margin-bottom: 100px;
        }
    </style>
</head>

<h2 class="mb-4">Gestión de Pedidos</h2>

@foreach (var pedido in Model.GroupBy(p => p.IdPedido))
{
    var info = pedido.First();
    <!-- Datos del pedido -->

    <div class="card mb-4 p-3 shadow-sm">

        <p><strong>ID Pedido:</strong> @info.IdPedido</p>
        <p><strong>Cliente:</strong> @info.NombreCliente</p>
        <p><strong>Fecha Compra:</strong> @info.FechaCompra?.ToString("dd/MM/yyyy")</p>
        <p><strong>Total Pedido:</strong> @info.ValorTotal.ToString("C")</p>

        <p><strong>Productos:</strong></p>

        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Valor Unitario</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in pedido)
                {
                    <tr>
                        <td>@prod.NombreProducto</td>
                        <td>@prod.Cantidad</td>
                        <td>@prod.ValorUnitario.ToString("C")</td>
                        <td>@( (prod.ValorUnitario * prod.Cantidad).ToString("C") )</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}

