@model List<LowYurt.Models.CarritoItem>

@{
    ViewData["Title"] = "Tu Carrito de Compras";
}
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            padding-top: 68px;
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        .table {
            vertical-align: unset;
        }


        tbody {
            vertical-align: unset;
            align-items: center;
        }

        .btn-light {
            padding:3px 10px;
        }
    </style>
</head>

<h2>Carrito de Compras</h2>

@if (Model.Count == 0)
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreProducto</td>
                    <td>@item.Precio.ToString("C")</td>
                    <td>
                        <form asp-action="DisminuirCantidad" asp-route-id="@item.IdProducto" method="post" style="display:inline">
                            <button type="submit" class="btn btn-light">-</button>
                        </form>

                        <span style="margin: 0 10px;">@item.Cantidad</span>

                        <form asp-action="AumentarCantidad" asp-route-id="@item.IdProducto" method="post" style="display:inline">
                            <button type="submit" class="btn btn-light">+</button>
                        </form>
                    </td>

                    <td>@((item.Precio * item.Cantidad).ToString("C"))</td>

                    <td>
                        <a asp-action="Eliminar" asp-route-id="@item.IdProducto" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Subtotal: @ViewBag.Subtotal.ToString("C")</h4>
    <h4>Envío: @ViewBag.ValorEnvio.ToString("C")</h4>
    <hr />
    <h3>Total a pagar: @ViewBag.Total.ToString("C")</h3>
    <div class="d-flex gap-2">
        <a asp-action="Vaciar" class="btn btn-secondary">Vaciar Carrito</a>
            <a asp-action="Pagar" class="btn btn-primary me-2">Pagar con Mercado Pago</a>
            <a asp-action="PagarConPayPal" class="btn btn-warning">Pagar con PayPal</a>
    </div>
}
