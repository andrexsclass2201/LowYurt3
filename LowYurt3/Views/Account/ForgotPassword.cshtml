@{
    ViewData["Title"] = "Recuperar Contraseña";
}
<head>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 700px;
            margin: 65px;
            font-family: Arial, sans-serif;
            background-size: contain;
        }

        .login-container {
            text-align: left;
            padding: 20px;
            border-radius: 5px;
            margin-top: -90px;
        }

        .login-container h2 {
            margin-bottom: 10px;
        }

        .login-container p {
            font-size: 0.9em;
            margin-bottom: 0px;
            color: #666;
        }

        .login-container input {
            display: block;
            width: 100%;
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .login-container button {
            background-color: #000000;
            color: #fff;
            padding: 10px 20px;
            cursor: pointer;
            width: 100%;
            font-size: 1em;
            border: solid #ffffff;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 10px;
        }

            .login-container button:hover {
                background-color: #00000000;
                color: #000000;
                border-color: black;
            }

        .login-container .links a {
            color: #000000;
            text-decoration: none;
            font-size: 0.9em;
        }

        .login-container .links a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<h2>Recuperar Contraseña</h2>

<form asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label>Correo electrónico</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Enviar enlace</button>
</form>

@if (TempData["Mensaje"] != null)
{
    <div id="alerta-temp" class="alert alert-success text-center" role="alert">
        @TempData["Mensaje"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div id="alerta-temp" class="alert alert-danger text-center" role="alert">
        @TempData["Error"]
    </div>
}

<script>
    // 🔹 Hace desaparecer los mensajes después de 3 segundos
    setTimeout(() => {
        const alertas = document.querySelectorAll('#alerta-temp');
        alertas.forEach(a => {
            a.style.transition = 'opacity 0.5s ease';
            a.style.opacity = '0';
            setTimeout(() => a.remove(), 500);
        });
    }, 3000);
</script>
